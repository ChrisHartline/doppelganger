# D-ID API Key (for lip-sync video generation - optional feature)
# Get from: https://studio.d-id.com/account-settings
DID_API_KEY=

# HeyGen API Key (for LiveAgent interactive avatar - optional feature)
# Get from: https://app.heygen.com/settings/api
HEYGEN_API_KEY=

# ElevenLabs API Key (for voice synthesis - optional feature)
# Get from: https://elevenlabs.io/app/settings/api-keys
# Voice ID: Browse voices at https://elevenlabs.io/voice-lab
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Claude API (recommended for best quality)
CLAUDE_API_KEY=

# Modal (for TinyLlama deployment - optional fallback)
MODAL_TOKEN_ID=
MODAL_TOKEN_SECRET=

# Nylas (for Gmail/Calendar integration)
# Get these from https://dashboard.nylas.com/
NYLAS_API_KEY=
NYLAS_GRANT_ID=
# OAuth setup keys (only needed if re-authenticating)
# NYLAS_CLIENT_ID=
# NYLAS_CLIENT_SECRET=

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5174

# Session/Auth
SESSION_SECRET=your-session-secret-here

# Notifications
# Email to receive conversation notifications
NOTIFICATION_EMAIL=chris.hartline.99@gmail.com
